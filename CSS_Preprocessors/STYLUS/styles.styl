* 
  margin: 0
  padding: 0
  box-sizing: border-box

body
  font-family: Arial, sans-serif
  background-color: #f4f4f4
  color: #333
  line-height: 1.6

header
  background-color: #333
  color: white
  padding: 1rem

h1
  text-align: center

main
  padding: 2rem

.intro
  background-color: #fff
  border: 1px solid #ddd
  padding: 1.5rem
  border-radius: 8px
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1)

footer
  text-align: center
  background-color: #333
  color: white
  padding: 1rem
